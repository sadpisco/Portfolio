import i18next, { t, changeLanguage } from "i18next";
const { isDeployed } = Astro.props;
const { languagge } = Astro.props;

const resultado = () => {
    let baseURL = null;
    if(isDeployed){
        baseURL = "https://leoriscodev.netlify.app/";
    switch (languagge){
        case "en":
            return baseURL + "es";
        case "es":
            return baseURL;
        default:
        return;
    };

}else {
        baseURL = "http://localhost:4321/";

        switch (languagge){
        case "en":
            return baseURL + "es";
        case "es":
            return baseURL;
        default:
        return;
    }
    }
}
---

<div class = "switchLanguageContainer">
    <a class = "switchLanguageAnchor" href = {resultado()}> 
        Change Language
    </a>
</div>