---
import { projects } from '@cv';
import GitHub from '../icons/GitHub.astro';
---
<section class = 'section'>
    <h1 class = 'title'>Projects</h1>
    <ul class = 'ul'>
        {projects?.map(({name, startDate, endDate, description, image, status, url, gitHub}) => {
            return(
                <li class = 'li'>
                    <h3 class = 'name'>{name}</h3>
                    <p>{startDate} - {endDate}</p>
                    <p class = 'description'>{description}</p>
                    <img src = {image} alt = {name} height="150" class = 'image'/>
                    { status == 'Finished' && (<div class = 'info'>
                        <p class = "status">{status}</p>
                        <div class = 'buttons'>
                        <a 
            href = {gitHub}
            title={`GitHub de ${name}`}
            class = 'icon'>
            <GitHub />
        </a>
                        <a href = {url} class = 'deploy'><span >Deploy</span></a>
                    </div>
                        </div>)}
                    { status == 'On Development' && (
                    <p class = "status">{status}</p>
                    <a 
            href = {gitHub}
            title={`GitHub de ${name}`}
            class = 'icon'>
            <GitHub class = 'svg'/>
        </a>
                    )}
                </li>
            )
        })}
    </ul>
</section>
<style>
    .section{
        width: 90%;
        max-width: 1000px;
        height: auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    .name{
        text-align: center;
    }
    .title{
        width: 100%;
        padding-top: 2vh;
        padding-bottom: 2vh;
    }
    .ul{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        
    }
    .li{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-around;
        width: 32%;
        padding: 1vh;
        border-radius: 10px;
        background-color: rgba(234, 234, 234, 0.79);
        min-height: 500px;
        height: auto;
        box-shadow: 0px 0px 5px black;
    }
    .image{
        min-width: 100px;
        height: auto;
        border-radius: 10px;
        margin: 1vh;
        max-height: 100px;
        box-shadow: 0px 0px 5px black;
    }
    .description{
        text-align: justify;
        padding: 10px;
        
        width: 100%;
        height: 32%;
        font-size: 12px;
        font-weight: 500;
    }
    .info{
        
        width: 100%;
        display: flex;
        height: 60px;
        flex-direction: column;
        align-items: center;
        justify-content: center;

    }
    .buttons{
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100%;
    }
    .deploy{
        width: 100px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgb(108, 109, 109);
        height: 35px;
        color: white;
        border-color: rgb(231, 231, 231);
        background-color: rgb(31, 31, 31);
        border-radius: 6px;
    }
    .icon{
        color: rgb(255, 255, 255);
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 35px;
        width: 35px;
        border-style: solid;
        border-color: rgb(231, 231, 231);
        background-color: rgb(31, 31, 31);
        border-width: 1px;
        cursor: pointer;
    }
    .icon:hover{
        color:black;
        background-color: rgb(223, 223, 223);
        transition: 0.3s;
    }
    .deploy:hover{
        color:black;
        background-color: rgb(223, 223, 223);
        transition: 0.3s;
    }
    .status{
        font-size: 14px;
        font-weight: 600;
    }

</style>