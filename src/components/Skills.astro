---
import { skills } from '@cv'
---

<section class = 'section'>
    <h1 class = 'title'>Skills</h1>
    <ul class = 'ul'>
        {skills.map(({name, level, summary, keywords,}) => {
            return(
                <li class = 'li'>
                    <h4>{name}</h4>
                    <h5>{level}</h5>
                    <p class = 'summary'>{summary}</p>
                    <div class = 'divKeywords'>
                    {keywords.map((element) => <span class = 'keyword'>{element}</span>)}
                </div>
                </li>
            )
        })}
    </ul>

</section>

<style>
    .section{
        width: 90%;
        max-width: 1000px;
        
    }
    .title{
        padding-bottom: 2vh;
    }
    .ul{
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        height: 35vh;
    }
    .li{
        width: 48%;
        height: 100%;
        border-radius: 5px;
        background-color: rgba(234, 234, 234, 0.79);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-around;
        padding: 2vh;
    }
    .li:hover{
        background-color: rgba(255, 255, 255, 0.79);
        border-color: rgb(234, 234, 234);
        box-shadow: 0px 0px 3px black;
        transition: 0.3s;
        
    }
    .divKeywords{
        width: 100%;
        display: flex;
        flex-wrap: wrap;
        gap: 3px;
    }
    .keyword{
        background-color: rgb(72, 72, 72);
        border-radius: 5px;
        padding: 4px;
        color: white;
        font-size: 10px;
        text-align: center;
        width: auto;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .summary{
        text-align: center;
        margin-bottom: 2vh;
    }
</style>