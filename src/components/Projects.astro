---
import { t } from "i18next";
const proyectos: [] = t("projects.projects", { returnObjects: true });
---

<section class="section">
  <h1 class="title">{t("projects.title")}</h1>
  <ul class="ul">
    {
      proyectos?.map(
        ({
          name,
          startDate,
          endDate,
          description,
          image,
          status,
          url,
          gitHub,
        }) => {
          return (
            <li class="li">
              <div class="sectionOne">
                <div class="titleOne">
                  <h3 class="name">{name}</h3>
                  <p class="status">{status}</p>
                </div>
                <p class="date">
                  {startDate} - {endDate}
                </p>
                <p class="description">{description}</p>
              </div>
              <img src={image} alt={name} class="image" />
            </li>
          );
        }
      )
    }
  </ul>
</section>
<style>
  .section {
    width: 90%;
    max-width: 1000px;
    height: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .name {
    text-align: center;
    width: auto;
    font-size: 15px;
    font-weight: 700;
  }
  .titleOne {
    width: 40%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: auto;
    width: 100%;
    gap: 1vh;
  }

  .date {
    width: 100%;
    text-align: start;
    padding-top: 5px;
    padding-bottom: 5px;
  }
  .title {
    width: 100%;
    font-size: 20px;
    font-weight: 700;
    padding-top: 2vh;
    padding-bottom: 2vh;
  }
  .ul {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: 0vh;
  }
  .li {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    width: 49%;
    min-height: 220px;
    margin-bottom: 25px;
    border-radius: 4px;
    background-color: rgba(234, 234, 234, 0.79);
    height: 400px;
    box-shadow: 0px 0px 5px rgb(188, 188, 188);
  }
  .li:hover {
    background-color: rgba(255, 255, 255, 0.79);
    border-color: rgb(234, 234, 234);
    box-shadow: 0px 0px 3px black;
    transition: 0.3s;
  }

  .sectionOne {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: start;
    width: 90%;
    min-height: 100px;
    height: auto;
    margin-top: 2vh;
  }
  .sectionTwo {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    width: 90;
    height: 20%;
  }
  .image {
    width: 100%;
    border-radius: 0px 0px 4px 4px;
    box-shadow: 0px 0px 0px black;
    max-height: 65%;
    height: 65%;
  }

  .description {
    text-align: justify;
    width: 100%;
    height: auto;
    font-size: 12px;
    font-weight: 500;
    line-height: 130%;
  }
  @media only screen and (max-width: 540px) {
    .titleOne {
      display: flex;
      flex-direction: column;
    }
    .name {
      text-align: center;
    }
    .li {
      height: max-content;
      min-height: 380px;
      padding: 1vh;
    }
    .image {
      width: 80%;
    }
    .description {
      font-size: 10px;
      line-height: 120%;
    }
  }

  .info {
    width: 100%;
    display: flex;
    height: 60px;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .buttons {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
  }
  @media print {
    .buttons {
      display: none !important;
    }
    .icon {
      display: none !important;
    }
    .info {
      display: none !important;
    }
  }
  .deploy {
    width: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgb(108, 109, 109);
    height: 35px;
    color: white;
    border-color: rgb(231, 231, 231);
    background-color: rgb(31, 31, 31);
    border-radius: 6px;
  }
  .icon {
    color: rgb(255, 255, 255);
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 35px;
    width: 35px;
    border-style: solid;
    border-color: rgb(231, 231, 231);
    background-color: rgb(31, 31, 31);
    border-width: 1px;
    cursor: pointer;
  }
  .icon:hover {
    color: black;
    background-color: rgb(223, 223, 223);
    transition: 0.3s;
  }
  .deploy:hover {
    color: black;
    background-color: rgb(223, 223, 223);
    transition: 0.3s;
  }
  .status {
    width: auto;
    color: black;
    padding-left: 5px;
    padding-right: 5px;
    font-size: 12px;
    font-weight: 500;
    text-align: center;
    border-radius: 3px;
    border: 1px solid black;
  }
</style>
