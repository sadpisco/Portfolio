---
import { work } from '@cv';
---
<section class = 'section'>
    <h1 class = 'title'>Experience</h1>
    <ul>
        {work.map(({name, position, startDate, endDate, summary, location}) =>{
            return(
                <li class = 'li'>
                    <div class = 'header'>
                        <h4 class = 'name'>{position} - {name}</h4>
                        <p>{startDate} - {endDate}</p>
                    </div>
                    <p class = 'location'>{location}</p>
                    <p>{summary}</p>
                </li>
            )
        })}
    </ul>

</section>
<style>
    .section{
        width: 90%;
        max-width: 1000px;
        margin-top: 4vh;
    }
    .title{
        width: 100%;
        font-size: 20px;
        font-weight: 700;
    }
    .name{
        font-weight: 500;
        font-size: 15px;
    }
    .header {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    .li{
        margin-top: 2vh;
        margin-bottom: 2vh;
    }
    .location{
        margin-top: 5px;
        margin-bottom: 5px;
    }

</style>