---
import { certificates } from '@cv'
import i18next, { t } from "i18next";
const certificados = t("certificates.certificates", { returnObjects: true });
---
<section class = 'section'>
    <h1 class = 'title'>{t("certificates.title")}</h1>
    <ul class = 'ul'>
        {certificados.map(({date, name, issuer, url}) =>{
            return(
                <li class = 'li'>
                <div class = 'info'>
                    <h3 class = 'name'>{name}</h3>
                    <h4 class = 'issuer'>{issuer}</h4>
                    <p>{date}</p>
                </div>
                    <a target="_blank" href = {url} class = 'a'><p style = {{color: 'white', fontWeight:'400',}}>Certificate Link</p></a>
                </li>
            )
        })}
    </ul>

</section>

<style>
    .section{
        width: 90%;
        max-width: 1000px;
        height: auto;
    }
    .title{
        width: 100%;
        padding-top: 2vh;
        padding-bottom: 2vh;
        font-size: 20px;
        font-weight: 700;
    }
    .ul{
        display: flex;
        align-items: center;
        justify-content: space-around;
        width: 100%;
        gap: 5px;
        height: auto;
    }
    .li{
        border-radius: 5px;
        /* border: solid 1px; */
        background-color: rgba(234, 234, 234, 0.79);
        
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        padding: 1vh;
        text-align: center;
        min-height: 170px;
    }
    @media only screen and (min-width: 540px){
        .li{
            min-height: auto;

        }
    }
    @media print{
        .li {
            border-style: solid;
            border-color: black;
            border-width: 1px;
            height: 150px;
        }
        .a{
            display: none;
        }
    }
    .li:hover{
        background-color: rgba(255, 255, 255, 0.79);
        border-color: rgb(234, 234, 234);
        box-shadow: 0px 0px 5px black;
        transition: 0.3s;
        
    }
    .a{
        background-color: rgb(101, 101, 101);
        padding: 5px;
        border-radius: 10px;
        cursor: pointer;
    }
    .a:hover{
        background-color: rgb(30, 30, 30);
        transition: 0.3s;
        border-color: rgb(234, 234, 234);
        box-shadow: 0px 0px 5px black;

    }
    .issuer{
        font-weight: 400;
    }
    .name{
        font-weight: 700;
        font-size: 17px;
    }


</style>

