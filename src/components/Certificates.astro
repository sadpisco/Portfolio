---
import { certificates } from '@cv'
---
<section class = 'section'>
    <h1 class = 'title'>Certificates</h1>
    <ul class = 'ul'>
        {certificates.map(({date, name, issuer, url}) =>{
            return(
                <li class = 'li'>
                    <div class = 'info'>
                    <h3>{name}</h3>
                    <h4 class = 'issuer'>{issuer}</h4>
                    <p>{date}</p>
                </div>
                    <a href = {url} class = 'a'><p style = {{color: 'white', fontWeight:'400',}}>Certificate Link</p></a>
                </li>
            )
        })}
    </ul>

</section>

<style>
    .section{
        width: 90%;
        max-width: 1000px;
    }
    .title{
        width: 100%;
        padding-bottom: 2vh;
    }
    .ul{
        display: flex;
        align-items: center;
        justify-content: space-around;
        width: 100%;
        gap: 1rem;
    }
    .li{
        border-radius: 5px;
        /* border: solid 1px; */
        background-color: rgba(234, 234, 234, 0.79);
        
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-around;
        padding: 2vh;
        text-align: center;
        height: 180px;
    }
    .li:hover{
        background-color: rgba(255, 255, 255, 0.79);
        border-color: rgb(234, 234, 234);
        box-shadow: 0px 0px 5px black;
        transition: 0.3s;
        
    }
    .a{
        background-color: rgb(101, 101, 101);
        padding: 5px;
        border-radius: 10px;
        cursor: pointer;
    }
    .a:hover{
        background-color: rgb(30, 30, 30);
        transition: 0.3s;
        border-color: rgb(234, 234, 234);
        box-shadow: 0px 0px 5px black;

    }
    .issuer{
        font-weight: 500;
    }


</style>

