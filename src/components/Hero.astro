---
import Mail from '../icons/Mail.astro';
import Phone from '../icons/Phone.astro';
import LinkedIn from '../icons/LinkedIn.astro';
import GitHub from '../icons/GitHub.astro';
import Whatsapp from '@/icons/whatsapp.astro';
import i18next, { t } from "i18next";

---
<section class = 'holeContainer' lang= {i18next.language}>
    <div class = 'container'>
        <div class = 'info'>
            <h1 class = 'name'>{t("basics.name")}</h1>
            <p>{t("basics.labelOne")}</p>
            <p>{t("basics.labelTwo")}</p>
            <p>{t("basics.labelThree")}</p>
            <p>{t("basics.location.city")} - {t("basics.location.countryCode")}</p>
            <div class = 'icons'>
            <a 
            href="mailto:leo99153@gmail.com"
            title={`Enviar un correo electrónico a ${t("basics.name")} al correo ${t("basics.email")}`} 
            target="_blank"
            rel="noopener noreferrer"
            class = 'icon'>
            <Mail />
        </a>
            <a 
            href="tel:(51)(954163059)"
            target="_blank"
            rel="noopener noreferrer" 
            title={`Llamar por teléfono a ${t("basics.name")} al número ${t("basics.phone")}`}
            class = 'icon'>
            <Phone />
        </a>
            <a
            target="_blank"
            href = 'https://www.linkedin.com/in/leonardo-risco/'
            title={`LinkedIn de ${t("basics.name")}`}
            class = 'icon'>
            <LinkedIn />
        </a>
            <a
            target="_blank"
            href = 'https://github.com/sadpisco'
            title={`GitHub de ${t("basics.name")}`}
            class = 'icon'>
            <GitHub />
        </a>
        <a
            target="_blank"
            href = 'https://wa.me/51954163059'
            title={`WhatsApp de ${t("basics.name")}`}
            class = 'icon'>
            <Whatsapp />
        </a>
        </div>
        <div class = 'toPrint'>
            <p>{t("basics.email")}</p>
            <p>{t("basics.phone")}</p>
            <p>{t("basics.url")}</p>

        </div>
        </div>
        <img src = {t("basics.image")} alt="ImagenPersonal" height="180" class = 'img'/>

    </div>
</section>

<style>
    .holeContainer{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 90%;
        max-width: 1000px;

    }
    .icon{
        color: rgb(0, 0, 0);
        border-radius: 3px;
        display: flex;
        width: auto;
        align-items: center;
        justify-content: center;
        padding: 6px;
        border-style: solid;
        border-color: rgb(231, 231, 231);
        border-width: 1.5px;
        cursor: pointer;
    }
    .toPrint{
        display: flex;
        flex-direction: column;
        align-items: start;
        justify-content: space-around;
        background-color: aqua;
        gap: 5px;
        display: none;
    }
    
    @media print{
        .toPrint{
            display: block;
        }
        .icons{
            display: none !important;
        }
    }
    .icon:hover{
        color:black;
        background-color: rgb(223, 223, 223);
        transition: 0.3s;
    }
    .container{
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        background-color: rgb(255, 255, 255);
        width: 100%;
        
    }
    .img{
        border-radius: 10px;
        box-shadow: 0px 0px 10px black;
        margin-right: 2vh;
    }
    .icons{
        display: flex;
        gap: 5px;
        margin-top: 2vh;
    }
    .name{
        font-weight: 700;
        padding-bottom: 1vh;
        font-size: 22px;
    }

    @media only screen and (min-width: 540px){
        .name{
            font-size: 27px;
            font-weight: 700;

        }
    }
</style>